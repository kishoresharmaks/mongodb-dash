# MongoDB Configuration
MONGODB_ATLAS_URI=mongodb://localhost:27017/sample_shop
DATABASE_NAME=sample_shop

# LLM Provider Selection
# Options: openai, gemini, local, huggingface
LLM_PROVIDER=gemini

# OpenAI Configuration (if LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
# Options: gpt-4, gpt-4-turbo-preview, gpt-3.5-turbo

# Google Gemini Configuration (if LLM_PROVIDER=gemini)
#GOOGLE_API_KEY=key

GEMINI_MODEL=gemini-2.5-flash-lite
# Options: gemini-pro, gemini-1.5-pro, gemini-1.5-flash, gemini-pro-latest

# Hugging Face Configuration (if LLM_PROVIDER=huggingface)
HUGGINGFACE_API_KEY=key
# Best free models for MongoDB/JSON query generation (ranked):
HUGGINGFACE_MODEL=Qwen/Qwen2.5-Coder-7B-Instruct
# ALT 1 (Best for code/query): Qwen/Qwen2.5-Coder-7B-Instruct
# ALT 2 (Meta, reliable):      meta-llama/Llama-3.1-8B-Instruct
# ALT 3 (Mistral, structured):  mistralai/Mistral-7B-Instruct-v0.3
# ALT 4 (Lightweight/fast):    microsoft/Phi-3.5-mini-instruct

LOCAL_LLM_BASE_URL=url
# LOCAL_LLM_MODEL=qwen2.5-coder-32b-instruct:2
LOCAL_LLM_MODEL=google/gemma-3-27b
# Recommended settings in LM Studio: Temperature=0.2, Max Tokens=2048, Top P=0.9
# Popular models: qwen2.5-coder-32b-instruct, deepseek-coder-v2-lite, llama-3.1-8b-instruct

# Service Configuration
PORT=8000
MAX_QUERY_LENGTH=5000
LOG_LEVEL=INFO
