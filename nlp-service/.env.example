# MongoDB Configuration
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DATABASE_NAME=sample_mflix

# LLM Provider Selection
# Options: openai, gemini, local
LLM_PROVIDER=gemini

# OpenAI Configuration (if LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
# Options: gpt-4, gpt-4-turbo-preview, gpt-3.5-turbo

# Google Gemini Configuration (if LLM_PROVIDER=gemini)
GOOGLE_API_KEY=AIzaSy-your-google-api-key-here
GEMINI_MODEL=gemini-pro
# Options: gemini-pro, gemini-1.5-pro

# Local LLM Configuration (if LLM_PROVIDER=local)
# LM Studio must be running with a model loaded
LOCAL_LLM_BASE_URL=http://localhost:1234/v1
LOCAL_LLM_MODEL=llama-3-8b-instruct
# Popular models: llama-3-8b-instruct, mistral-7b-instruct-v0.2, phi-3-mini-4k-instruct

# Service Configuration
PORT=8000
LOG_LEVEL=INFO
